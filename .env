# ===========================================
# REQUIRED ENVIRONMENT VARIABLES
# ===========================================
# These variables MUST be set for the application to run
# Copy this file to .env and fill in the values

# Database Configuration (REQUIRED)
DATABASE_URL=mysql://user:@localhost:3306/manufacturing_erp
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=manufacturing_erp

# JWT Configuration (REQUIRED)
# SECURITY WARNING: Use a strong, random secret in production
# Generate with: openssl rand -base64 32
JWT_SECRET=kwatog
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Application Configuration (REQUIRED)
NODE_ENV=development
APP_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Session Configuration
SESSION_SECRET=kwatog

# Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Notification Configuration
NOTIFICATION_RETENTION_DAYS=30  

# Audit Log Configuration (REQUIRED)
AUDIT_LOG_RETENTION_DAYS=365

# ===========================================
# OPTIONAL ENVIRONMENT VARIABLES
# ===========================================

# Email Configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=ERP System <noreply@example.com>

# Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# Logging Configuration
# LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# Security Configuration
# CORS_ORIGIN=http://localhost:3000
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# ===========================================
# PRODUCTION DEPLOYMENT CHECKLIST
# ===========================================
# Before deploying to production, ensure:
# ✅ JWT_SECRET is changed to a strong random value
# ✅ SESSION_SECRET is changed to a strong random value
# ✅ DATABASE_URL points to production database
# ✅ DB_PASSWORD is secure and not default
# ✅ NODE_ENV is set to 'production'
# ✅ APP_ENV is set to 'production'
# ✅ SMTP credentials are configured for email notifications
# ✅ All default passwords are changed
# ✅ SSL/TLS is enabled for database connections
# ✅ Backup strategy is configured and tested
